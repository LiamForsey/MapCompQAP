<%- include('partials/header') %>

<header>
    <h1>Leaderboard</h1>
    <link rel="stylesheet" href="/styles.css">
</header>

<h2>Top 10 Streaks</h2>

<table>
    <thead>
        <tr>
            <th>Rank</th>
            <th>Streak</th>
            <th>Date Achieved</th>
        </tr>
    </thead>
    <tbody>
        <% leaderboard.forEach((entry, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= entry.streak %></td>
                <td><%= entry.date.toLocaleString() %></td>
            </tr>
        <% }); %>
    </tbody>
</table>

<a href="/">Back to Home</a>
</body>
</html>
